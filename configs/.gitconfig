[user]
	email = dsiq3g@gmail.com
	name = Samuel Jackson
[color]
	ui = auto
[core]
	pager = less -FMRiX
	editor = vim
	excludesfile = ~/.gitignore_global
[push]
	default = simple
[alias]
    finda = "!grepalias() { git config --global --get-regexp alias | grep -i \"$1\" | awk -v nr=2 '{sub(/^alias\\./,\"\")};{printf \"\\033[31m%s\\033[1;37m\", $1};{sep=FS};{for (x=nr; x<=NF; x++) {printf \"%s%s\", sep, $x; }; print \"\\033[0;39m\"}'; }; grepalias"
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
	wdiff = diff --color-words
    fix = "!f() { vim -p `git diff --name-only --diff-filter=U`; }; f"
    root = "rev-parse --show-toplevel"
    nlog = "log --numstat"
[diff]
	tool = vimdiff2
[merge]
	tool = vimdiff2
[pull]
	rebase = true
[rerere]
	enabled = true
[include]
	path = ~/.gitconfig.local
[init]
	defaultBranch = main
