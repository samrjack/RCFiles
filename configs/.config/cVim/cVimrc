set hud
set smoothscroll
set incsearch
set cncpcompletion
set regexp
set cncpcompletion " Uses C-n/C-p in completion selection
set completeonopen
let defaultengine = 'google'
let locale = "us"

let configpath = '~/.config/cVim/.cVimrc'

map j scrollDown
map k scrollUp
map h scrollLeft
map l scrollRight

map d scrollPageDown
map u scrollPageUp
map D scrollFullPageDown
map U scrollFullPageUp

map gg scrollToTop
map G scrollToBottom
map 0 scrollToLeft
map $ scrollToRight

map o :open<Space>
map O :open!<Space>
map <C-o> :open @%
map <A-o> :open! @%

map ^ firstTab

map < moveTabLeft
map > moveTabRight
map x closeTab
map X lastClosedTab
map <A-p> pinTab

map H goBack
map L goForward

" map <C-h>
" map <C-l>

map bc createBookmark
map bo :bookmarks<Space>
map bt :bookmarks!<Space>
map bT :bookmarks&<Space>

map ss :mksession<Space>
map sd :delsession<Space>
map sr :session<Space>

map wa :tabattach<Space>
map wd :tabdetach<CR>
map wo :new<Space>
